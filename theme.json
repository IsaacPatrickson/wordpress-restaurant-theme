{
    "version": 2,
    "$schema": "https://shcemas.wp.org/wp/6.6.2/theme.json",
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "620px",
            "wideSize": "1200px"
        },
        "spacing": {
            "units": ["%", "px", "em", "rem", "vh", "vw"]
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "spacing": {
            "padding": {
                "top": "1rem",
                "right": "2rem",
                "bottom": "2rem",
                "left": "2rem"
            }
        }
    }
}